<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:gravity="left"
    android:orientation="vertical">

    <TextView
        android:id="@+id/aerobic_workout_label_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/aerobic_workout"
        android:textSize="@dimen/title_text_size" />




    <ListView
        android:id="@+id/aerobicList"
        android:layout_width="wrap_content"
        android:layout_height="322dp"
        android:layout_marginBottom="@dimen/list_border_width"
        android:layout_marginLeft="@dimen/list_border_width"
        android:layout_marginRight="@dimen/list_border_width"
        android:layout_marginTop="@dimen/list_border_width"
        android:background="@color/list_background"
        android:divider="@color/list_divider_color"
        android:dividerHeight="1dp"
        android:focusable="false"
        android:stackFromBottom="false" >

    </ListView>

    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp">
        <Button
            android:id="@+id/finishButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="@string/finish"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


</LinearLayout>
