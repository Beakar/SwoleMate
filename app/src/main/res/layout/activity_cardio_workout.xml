<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <edu.up.swolemate.FontEditText
        android:id="@+id/cardioNameEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:ems="10"
        android:hint="Workout Name" >

        <requestFocus />
    </edu.up.swolemate.FontEditText>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Chronometer
                android:textSize="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chronometer"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:background="#009900"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:id="@+id/startButton"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    android:background="#990000"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:id="@+id/stopButton"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

    <edu.up.swolemate.FontEditText
        android:id="@+id/durationEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Duration"
        android:clickable="true"/>
    <CheckBox
        android:id="@+id/cb_manualInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Manually enter duration"
        android:textColorHint="@color/black"/>


    <edu.up.swolemate.FontEditText
        android:id="@+id/et_cardioDistanceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Distance"
        android:inputType="numberDecimal" />

    <CheckBox
        android:id="@+id/cb_recordDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="Record Distance" />



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <edu.up.swolemate.FontButton
            android:id="@+id/finishButton"
            android:background="#aaaaaa"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Finish"
            android:onClick="onFinishClick"/>
        </RelativeLayout>


</LinearLayout>
