<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <edu.up.swolemate.FontTextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:text="@string/add_new_exercise"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:background="#cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Exercise name"
                android:id="@+id/exercise_name" />

            <ExpandableListView
                android:id="@+id/sets_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ExpandableListView>
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <edu.up.swolemate.FontButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_set_button_text"
            android:layout_weight="1"
            android:id="@+id/new_set_button"
            android:background="#005500"
            android:textColor="#ffffff"/>

        <edu.up.swolemate.FontButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_exercise_button_text"
            android:layout_weight="1"
            android:id="@+id/save_new_strength_exercise_button"
            android:background="#aaaaaa"
            android:textColor="#ffffff"/>

        <edu.up.swolemate.FontButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel_string"
            android:layout_weight="1"
            android:id="@+id/cancel_new_exercise_dialog_button"
            android:background="#cccccc"
            android:textColor="#ffffff"/>

    </LinearLayout>


</LinearLayout>